@using Microsoft.AspNetCore.Identity
@using KompromatKoffer.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager



    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage your Account"><i class="fas fa-user"></i></a>
                </li>
                <li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Administrator"))
                        {
                            <a asp-page="/Administration/Index" title="Administration"><i class="fas fa-screwdriver"></i></a>
                        }
                    }

                </li>

                <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fas fa-sign-out-alt"></i></button>
                </li>
            </ul>
        </form>
    }
    else
    {

    }
