@page
@model KompromatKoffer.Pages.Lists.MdB.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Liste aller Mitglieder des Bundestages auf Twitter</h2>

<table class="MdBListTable">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort" asp-route-currentFilter="@Model.CurrentFilter">
                        @Html.DisplayNameFor(model => model.MdBModel[0].TwitterName)
                    </a>
                <form>
                    <p>
                        <input type="text" name="SearchString">
                        <input type="submit" value="Filter" />
                    </p>
                </form>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.MdBModel[0].Verified)
            </th>
            <th>
                Description
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MdBModel[0].Party)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MdBModel[0].Location)

                <form>
                    <p>
                        <input type="text" name="SearchStringLocation">
                        <input type="submit" value="Filter" />
                    </p>
                </form>
            </th>
            <th>
                Website
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.CreatedAtSort" asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.MdBModel[0].CreatedAt)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.StatusCountSort" asp-route-currentFilter="@Model.CurrentFilter">
                    Statuses
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.FollowersCountSort" asp-route-currentFilter="@Model.CurrentFilter">
                    Followers
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.FriendsCountSort" asp-route-currentFilter="@Model.CurrentFilter">
                    Friends
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.FavCountSort" asp-route-currentFilter="@Model.CurrentFilter">
                    Favs
                </a>
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.MdBModel[0].LastStatus)
                <form>
                    <p>
                        <input type="text" name="SearchStringLastStatus">
                        <input type="submit" value="Filter" />
                    </p>
                </form>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.MdBModel[0].LastStatusCreated)
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MdBModel)
        {
            <tr>
                <td>
                    @{
                        int indexpos = Model.MdBModel.IndexOf(item);

                    }

                    @{
                        if (Model.MdBModel.PageIndex == 1)
                        {
                            int newindex = indexpos + 1;
                            @newindex;
                        }
                        if (Model.MdBModel.PageIndex > 1)
                        {
                            int newindex = indexpos + (Model.MdBModel.PageIndex * 100) + 1 -100;
                            @newindex
                        }

                    }



                </td>
                <td>
                    <div class="alignCenter">
                        <a href="@Html.DisplayFor(modelItem => item.TwitterProfileUrl)" target="_blank" class="imageLink">
                            <img src="@Html.DisplayFor(modelItem => item.ProfileImageUrlHttps)" />
                            <p>@Html.DisplayFor(modelItem => item.TwitterName)</p>
                        </a>
                    </div>
                </td>
                <td class="verified">
                    @Html.DisplayFor(modelItem => item.Verified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TwitterDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Party)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td class="verified">
                    <a href="@Html.DisplayFor(modelItem => item.LinkedUrl)" target="_blank"><i class="fas fa-link"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusesCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FollowersCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FriendsCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FavCounts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastStatusCreated)
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.MdBModel.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.MdBModel.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.MdBModel.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.MdBModel.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @nextDisabled">
    Next
</a>
